<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!--透明状态栏-->
        <!-- <item name="android:windowTranslucentStatus">true</item>-->
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:statusBarColor">@color/colorBlue</item>
        <!--使状态栏，导航栏可绘制-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--使状态栏，导航栏可绘制-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="NormalTheme" parent="AppTheme.Base">
        <!--使状态栏，导航栏可绘制-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">#c2c2c2</item>
    </style>
    <style name="sendTheme" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/colorGray</item>
        <item name="colorAccent">@color/colorDarkerBlue</item>
        <!--使状态栏，导航栏可绘制-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>